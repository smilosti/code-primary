{
    "name": "IaC Dev Container",
    "context": ".",
    "dockerFile": "Dockerfile",
    "workspaceFolder": "/workspaces/iac",
    "customizations": {
      "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        },
        "extensions": [
          "hashicorp.terraform",
          "redhat.ansible",
          "ms-azuretools.vscode-docker"
        ]
      }
    },
    "mounts": [
      "source=${localWorkspaceFolder}/terraform,target=/workspaces/iac/terraform,type=bind",
      "source=${localWorkspaceFolder}/ansible,target=/workspaces/iac/ansible,type=bind",
      "source=${localWorkspaceFolder}/helm,target=/workspaces/iac/helm,type=bind",
      "source=/home/apex/.ssh/id_ecdsa,target=/home/vscode/.ssh/id_ecdsa,type=bind,consistency=cached"
    ],
    "postCreateCommand": "terraform --version && ansible --version && helm version",
    "remoteUser": "vscode"
  }
  